{
  "defaultStacks": ["subscriptions"],
  "packages":{
      "ami-update": {
        "type": "ami-cloudformation-parameter",
        "apps": ["content-authorisation-proxy"],
        "data": {
            "amiTags": { "Recipe": "xenial-membership", "AmigoStage": "PROD" },
                "amiParameter": "ImageId",
                "cloudFormationStackByTags" : true
            }
      },
    "content-authorisation-proxy":{
      "type":"autoscaling",
      "data":{
        "bucket": "subscriptions-dist"
      }
    }
  },
  "recipes":{
    "default":{
      "actionsBeforeApp": ["ami-update.update", "content-authorisation-proxy.uploadArtifacts", "content-authorisation-proxy.deploy"]
    },
    "artifactUploadOnly": {
      "actions": [ "content-authorisation-proxy.uploadArtifacts" ]
    }
  }
}